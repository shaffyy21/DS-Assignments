#include <iostream>
#include <vector>
using namespace std;

class Graph {
    int n;
    vector<vector<int>> adjMat;
    vector<vector<int>> adjList;

public:
    Graph(int vertices) : n(vertices) {
        adjMat.assign(n, vector<int>(n, 0));
        adjList.assign(n, vector<int>());
    }

    void addEdge(int u, int v, bool directed = false) {
        adjMat[u][v] = 1;
        adjList[u].push_back(v);
        if (!directed) {
            adjMat[v][u] = 1;
            adjList[v].push_back(u);
        }
    }

    int outDegree(int v) {
        return adjList[v].size();
    }

    int inDegree(int v) {
        int deg = 0;
        for (int i = 0; i < n; i++)
            if (adjMat[i][v] == 1) deg++;
        return deg;
    }

    vector<int> adjacentVertices(int v) {
        return adjList[v];
    }

    int numberOfEdges(bool directed = false) {
        int cnt = 0;
        for (int i = 0; i < n; i++)
            for (int j = 0; j < n; j++)
                if (adjMat[i][j] == 1) cnt++;
        return directed ? cnt : cnt / 2;
    }

    void printAdjMatrix() {
        for (auto &row : adjMat) {
            for (int x : row) cout << x << " ";
            cout << endl;
        }
    }

    void printAdjList() {
        for (int i = 0; i < n; i++) {
            cout << i << ": ";
            for (int v : adjList[i]) cout << v << " ";
            cout << endl;
        }
    }
};

int main() {
    Graph g(5);

    g.addEdge(0, 1);
    g.addEdge(0, 4);
    g.addEdge(1, 2);
    g.addEdge(1, 3);
    g.addEdge(1, 4);
    g.addEdge(2, 3);
    g.addEdge(3, 4);

    cout << "Adjacency Matrix:\n";
    g.printAdjMatrix();

    cout << "\nAdjacency List:\n";
    g.printAdjList();

    cout << "\nOut-degree of 1: " << g.outDegree(1) << endl;
    cout << "In-degree of 1: " << g.inDegree(1) << endl;

    cout << "\nAdjacent vertices of 1: ";
    for (int v : g.adjacentVertices(1)) cout << v << " ";
    cout << endl;

    cout << "\nNumber of edges: " << g.numberOfEdges() << endl;

    return 0;
}
