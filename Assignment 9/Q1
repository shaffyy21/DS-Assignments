#include <iostream>
#include <vector>
using namespace std;

void heapify(vector<int>& arr, int n, int i, bool descending) {
    int idx = i;
    int left = 2 * i + 1;
    int right = 2 * i + 2;

    if (!descending) {
        if (left < n && arr[left] > arr[idx]) idx = left;
        if (right < n && arr[right] > arr[idx]) idx = right;
    } else {
        if (left < n && arr[left] < arr[idx]) idx = left;
        if (right < n && arr[right] < arr[idx]) idx = right;
    }

    if (idx != i) {
        swap(arr[i], arr[idx]);
        heapify(arr, n, idx, descending);
    }
}

void heapsort(vector<int>& arr, bool descending = false) {
    int n = arr.size();
    for (int i = n / 2 - 1; i >= 0; i--)
        heapify(arr, n, i, descending);
    for (int i = n - 1; i > 0; i--) {
        swap(arr[0], arr[i]);
        heapify(arr, i, 0, descending);
    }
}

void printArray(const vector<int>& arr) {
    for (int x : arr) cout << x << " ";
    cout << endl;
}

int main() {
    vector<int> arr = {12, 3, 5, 7, 19, 1};

    vector<int> inc = arr;
    heapsort(inc, false);
    printArray(inc);

    vector<int> dec = arr;
    heapsort(dec, true);
    printArray(dec);

    return 0;
}

